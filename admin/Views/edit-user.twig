{% extends "layouts/main.twig" %}

{% block content %}
    <div class="dashboard-breadcrumb mb-30">
        <h2>Edit User account</h2>
    </div>
    <div class="row g-4">
        <div class="col-xxl-6 col-md-8">
            <div class="panel">
                <div class="panel-header">
                    <h5>Edit User account</h5>
                </div>
                <div class="panel-body">
                    <form action="/admin/users/{{ account.id }}/edit" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Username</label>
                                <input type="text" name="update_username" value="{{ account.username }}" class="form-control form-control-sm" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Password</label>
                                <input type="text" name="update_password" value="{{ account.password }}" class="form-control form-control-sm" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Flag</label>
                                <input type="text" name="update_flag" value="{{ account.flag }}" class="form-control form-control-sm" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Status</label>
                                <input type="text" name="update_status" value="{{ account.status }}" class="form-control form-control-sm" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Fail time</label>
                                <input type="text" name="update_fail_time" value="{{ account.fail_time }}" class="form-control form-control-sm" required>
                            </div>
                            <div class="col-12 d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-primary">Save changes</button>
                                <a href="/admin/users" class="btn btn-secondary ms-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}